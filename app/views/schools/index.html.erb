<h1>All Schools</h1>

<div>
  <%= link_to 'New School', new_school_path, class: 'btn btn-success' %>
</div>

<div class='row'>
  <% @schools.each do |school| %>
    <div class='col-xs-12 col-sm-4 well well-lg'>
      <h3><%= school.name %></h3>
      <br />
      <%= link_to 'Go to School', school_path(school), class: 'btn btn-primary' %>

    </div>
      <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-primary' %>
  <% end %>
</div>
